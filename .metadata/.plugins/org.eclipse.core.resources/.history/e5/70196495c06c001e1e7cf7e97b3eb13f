package control;

public class ForTest3 {

	public static void main(String[] args) {
		// 1) 세로축을 만들기 
		for(int i=2; i<=9; i+=4) {
			for(int j=1; j<=9; j++) {
				
				for(int k=1; k<=4; k++) {
					System.out.print(i + "*" + j + "=" + 2*j);
				}
				System.out.println();
			}
			System.out.println();
		}
		
		
		// for문 3개로 구구단 출력 
		for(int k=1; k<=2; k++) {
			for(int i=1; i<=9; i++) {
				for(int j=1; j<=4; j++) {
					int a = (k-1)*4 + j+1;
					int b = i;
					System.out.print(a + "*" + b + "=" + a*b +"\t");
				}
				System.out.println();
			}
			System.out.println();
		}
		
		
//		for(int i=2; i<=9; i++) {
//			for(int j=1; j<=9; j++) {
//				System.out.println(i + "*" + j + "=" + 2*j);
//			}
//			System.out.println();
//		}
	}

}
