package Thread;

class MyDataKeyObject1 {
	synchronized void abc() {
		for (int i = 0; i < 3; i++) {
			System.out.println(i + "sec");
			try {
				Thread.sleep(1000);
			} catch (InterruptedException e) {
			}
		}
	}

	synchronized void bcd() {
		for (int i = 0; i < 3; i++) {
			System.out.println(i + "sec");
			try {
				Thread.sleep(1000);
			} catch (InterruptedException e) {
			}
		}
	}

	void cde() {
		synchronized (this) {
			for (int i = 0; i < 3; i++) {
				System.out.println(i + "sec");
				try {
					Thread.sleep(1000);
				} catch (InterruptedException e) {
				}
			}
		}
	}

}

public class KeyObject_1 {

	public static void main(String[] args) {
		// 공유 객체 생성
		MyDataKeyObject1 myData = new MyDataKeyObject1();
		
		// 3개의 쓰레드가 각각의 메서드 호출
		new Thread() {
			public void run() {
				myData.abc();
			}
		}.start();
		new Thread() {
			public void bcd() {
				myData.abc();
			}
		}.start();
		new Thread() {
			public void cde() {
				myData.abc();
			}
		}.start();
	}

}
